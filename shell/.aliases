#!/bin/bash

# Git
alias ga="git add"
alias gaa="git add -A"
alias gau="git add --update"
alias gb="git branch"
alias gbd="git branch --delete "
alias gc="git commit -m"
alias gca="git commit --amend -m"
alias gcf="git commit --fixup"
alias gco="git checkout"
alias gcob="git checkout -b"
alias gcom="git checkout master"
alias gcos="git checkout staging"
alias gcod="git checkout develop"
alias gcpaste="git clone \$(pbpaste)"
alias gd="git diff"
alias gda="git diff HEAD"
alias gfp="git fetch --all && git reset --hard origin/master"
alias gh="gh-home"
alias gl="git log"
alias glcm="git show-branch --no-name HEAD"
alias glg="git log --graph --oneline --decorate --all"
alias gld="git log --pretty=format:"%h %ad %s" --date=short --all"
alias gm="git merge --no-ff"
alias gma="git merge --abort"
alias gmc="git merge --continue"
alias gmom="git merge origin/master"
alias gp="git pull"
alias gpr="git pull --rebase"
alias gr="git rebase"
alias gs="git status"
alias gss="git status --short"
alias gst="git stash"
alias gsta="git stash apply"
alias gstc="git stash clear"
alias gstd="git stash drop"
alias gstl="git stash list"
alias gstp="git stash pop"
alias gsts="git stash save"
alias gu="git push"
alias gub="git push -u origin"

# LastPass CLI
alias lpass-passclip="lpass show --password -c"

# Python
alias dvenv="deactivate"
alias mvenv="python3 -m venv env"
alias venv="source env/bin/activate"
alias pip_upgrade="pip install --upgrade pip"

# Shell
alias valiases="$EDITOR ~/.aliases"
alias vexports="$EDITOR ~/.exports"
alias vfunctions="$EDITOR ~/.functions"
alias vlocalrc="$EDITOR ~/.localrc"
alias vzsh="$EDITOR ~/.zshrc"

# Miscellaneous
alias afk="open -a /System/Library/CoreServices/ScreenSaverEngine.app"
alias amplify="cd $HOME/code/amplify"
alias cleanupDS="find . -type f -name '*.DS_Store' -ls -delete"
alias fcl="fortune | cowsay | lolcat"
alias GO_PRACTICE="cd $HOME/code/lib/go/src/github.com/dmoini/go-practice"
alias myip="ifconfig | grep 'inet ' | grep -v 127.0.0.1 | awk '{print $2}'"
alias path="echo -e ${PATH//:/\\n};"
alias sp="spotify"
alias ys="yarn start"
