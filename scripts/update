#!/bin/bash

GREEN='\033[0;32m'
CYAN='\033[0;36m'
NC='\033[0m'
CURR_DIR=$(pwd)

UPDATING_ECHO() {
    echo -e "${CYAN}Updating $1...${NC}"
}

UPDATING_ECHO "appstore apps"
mas upgrade
echo

UPDATING_ECHO "dotfiles"
update_dotfiles
echo

UPDATING_ECHO "git repositories"
cd "/Users/donovanmoini/code"
update_git_repos
cd $CURR_DIR
echo

UPDATING_ECHO "Homebrew"
brew update
brew upgrade
brew cask upgrade
brew cleanup
echo

UPDATING_ECHO "macOS"
softwareupdate -i -a
echo

UPDATING_ECHO "npm packages"
npm outdated -g --depth=0
echo
npm update -g
echo

UPDATING_ECHO "pip"
pip install --upgrade pip

UPDATING_ECHO "zsh"
env ZSH=$ZSH sh $ZSH/tools/upgrade.sh
echo

nyan